@page
@model RegisterModel
@{
    ViewData["Title"] = "Înregistrare";
}

<h1 style="color:red">@ViewData["Title"]</h1>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color:red">Creează un cont nou</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger" style="width: 100%; margin-bottom: 10px;"></div>
            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-envelope icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.Email" class="form-control" placeholder="Adresa de email" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger" style="white-space:pre-wrap"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-key icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.Password" class="form-control" placeholder="Parolă" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-key icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmă parola" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-user" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.LastName" class="form-control" placeholder="Nume" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-user" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.FirstName" class="form-control" placeholder="Prenume" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            <br />
            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-male icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.Weight" class="form-control" placeholder="Greutate (kg)" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Weight" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-calendar icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.BirthDate" class="form-control" placeholder="Data de naștere" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-tint icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.BloodType" list="bloodtypes" class="form-control" placeholder="Grupa sanguină" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
                <datalist id="bloodtypes">
                    <option value="A"></option>
                    <option value="B"></option>
                    <option value="AB"></option>
                    <option value="O"></option>

                </datalist>
            </div>
            <span asp-validation-for="Input.BloodType" class="text-danger"></span>

            <br />

            <div class="form-group" style="display: flex;width: 100%;margin-bottom: 15px;">
                <i class="fa fa-address-book icon" style="padding: 10px;min-width: 50px;text-align: center;background:red;color:white"></i>
                <input asp-for="Input.Address" class="form-control" placeholder="Adresa" style="width: 100%;padding: 10px;outline: none;text-align: center;" />
            </div>
            <span asp-validation-for="Input.Address" class="text-danger"></span>

            <br />

            <button type="submit" class="btn btn-primary" style="opacity:2;transition: 0.3s;background-color:red;text-decoration-color:white">Înregistrare</button>
            <br />
            <br />
            <br />
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color:red;">Deja ai un cont? Conectează-te!</a>
            </p>

        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4 style="color:red">Ne bucurăm să te vedem!</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                     <div style="position:absolute;top:100px;left:200px;">
                         <img src="https://www.donateacar.com/wp-content/uploads/2018/01/Donate_Blood_Give_children_Save_Lives.jpg" />
                         <p style="text-align: center">
                             <b>
                                 Aceasta este cea mai mare bucurie pe care o poți experimenta în viață.
                             </b>
                         </p>
                         <p style="text-align: center">
                             <b>
                                 Bucuria de a oferi viață altora.
                             </b>
                         </p>
                     </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
